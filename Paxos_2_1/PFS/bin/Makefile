ROOT = ../../

install:
	cp cell_autonomic.sh $(ROOT)bin
	cp cell_log.sh $(ROOT)bin
	cp cell_restart.sh $(ROOT)bin
	cp cell_start.sh $(ROOT)bin
	cp cell_stop.sh $(ROOT)bin
	cp css_adm.sh $(ROOT)bin
	cp css_deploy.sh $(ROOT)bin
	cp css_monitor.sh $(ROOT)bin

uninstall:
	rm -f $(ROOT)bin/cell_autonomic.sh
	rm -f $(ROOT)bin/cell_log.sh
	rm -f $(ROOT)bin/cell_restart.sh
	rm -f $(ROOT)bin/cell_start.sh
	rm -f $(ROOT)bin/cell_stop.sh
	rm -f $(ROOT)bin/css_adm.sh
	rm -f $(ROOT)bin/css_deploy.sh
	rm -f $(ROOT)bin/css_monitor.sh

